<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Andlytics" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/Widget.Andlytics.ActionBar</item>
    </style>

    <style name="Widget.Andlytics.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="subtitleTextStyle">@style/TextAppearance.Andlytics.Widget.ActionBar.Subtitle</item>
    </style>

    <style name="TextAppearance.Andlytics.Widget.ActionBar.Subtitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">@dimen/abc_action_bar_subtitle_text_size</item>
        <item name="android:textColor">@android:color/secondary_text_dark</item>
    </style>

    <style name="MainTableText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="MainTableRatingsChangeText" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackText</item>
        <item name="android:minWidth">120dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MainTableTextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blackText</item>
    </style>

    <style name="MainTableHeadline" parent="@style/MainTableText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlue</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.InfoDialog</item>
    </style>

    <style name="Animation.InfoDialog" parent="@android:style/Animation">
        <item name="@android:windowEnterAnimation">@anim/info_dialog_fade_in</item>
        <item name="@android:windowExitAnimation">@anim/info_dialog_fade_out</item>
    </style>

    <style name="andRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/and_ratingbar_full</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
    </style>

    <!-- Hidden on narrow screens -->
    <style name="RatingsRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/and_ratingbar_full</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">24dip</item>
        <item name="android:maxHeight">24dip</item>
        <item name="android:isIndicator">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:numStars">5</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="RatingsProgressBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="italicText">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="boldItalicText">
        <item name="android:textStyle">italic|bold</item>
    </style>

    <style name="boldText">
        <item name="android:textStyle">bold</item>
    </style>

</resources>